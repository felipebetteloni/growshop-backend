{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "prebuild2": "rimraf node_modules",
    "build": "nest build --webpack",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start-offline": "serverless offline",
    "lint": "eslint --quiet \"**/*.ts\"",
    "lint:fix": "eslint \"**/*.ts\" --fix",
    "prettier": "prettier --list-different \"**/*.ts\"",
    "prettier:fix": "prettier --write \"**/*.ts\"",
    "format": "npm run lint:fix && npm run prettier:fix",
    "prisma:introspect": "prisma introspect",
    "prisma:generate": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npx supabase start && npx dotenv -e .env.e2e-test -- npx prisma migrate dev && npx dotenv -e .env.e2e-test -- jest --config ./test/jest-e2e.json"
  },
  "resolutions": {
    "graphql": "16.6.0"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@apollo/subgraph": "^2.9.0",
    "@as-integrations/fastify": "^1.3.2",
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/common": "^10.4.3",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.3",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/platform-express": "^10.4.3",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/client": "^5.19.1",
    "@vendia/serverless-express": "4.10.4",
    "apollo-server-core": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "aws-lambda": "1.0.7",
    "aws-serverless-express": "3.4.0",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.21.0",
    "fastify": "^5.0.0",
    "graphql": "^16.9.0",
    "graphql-tools": "^9.0.1",
    "graphql-type-json": "^0.3.2",
    "http": "0.0.1-security",
    "prisma-graphql-type-decimal": "^3.0.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.10",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^8.14.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.3",
    "@prisma/generator-helper": "^5.19.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.2",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "copy-webpack-plugin": "^12.0.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "jest": "29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "prisma-erd-generator": "^1.11.2",
    "prisma-nestjs-graphql": "^20.0.3",
    "serverless": "3.28.1",
    "serverless-http": "^3.2.0",
    "serverless-offline": "12.0.4",
    "serverless-ssm-fetch": "2.0.0",
    "source-map-support": "0.5.21",
    "supabase": "^1.192.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "webpack": "^5.94.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "engines": {
    "node": "18"
  }
}
